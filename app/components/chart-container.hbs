<div
  class="chart-container"
  {{did-insert this.fetchData @location}}
  {{did-update this.fetchData @location}}
  ...attributes
>
  <TimeSeries
    class="chart-container__timeseries"
    @records={{this.records}}
    @title="Cases over time"
    @width="95%"
    @height="200px"
  />
  <StackedBar
    class="chart-container__stacked-bar"
    @records={{this.records}}
    @title="Daily Change"
    @width="95%"
    @height="200px"
  />
</div>